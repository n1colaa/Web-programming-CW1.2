<%- include("header") -%>
    <br>
    <h1 style="text-align: center; font-size: 9vw; ">New Table Reservation</h1>
        <div style="padding:5vw; background-color:#0C0C0C; border:0.4vw solid; border-color:grey;">
            <form class="contact-form"  >
                <label for="fname">Full name:</label><br>
                    <input class="contact-form" type="text" id="fname" name="fname" required ><br>
                <label for="size">Party Size:</label><br>
                    <input class="contact-form" type="number" id="size" name="size" min = "1" max="6" required> <br>
                <label for="date">Date of your reservation :</label><br>
                    <input class="contact-form" type="date" id="date" name="date" required><br>
                <label for="time">Time of your reservation :</label><br>
                    <select name="time" id="time">
                        <option>15:00</option>
                        <option>16:00</option>
                        <option>17:00</option>
                        <option>18:00</option>
                        <option>19:00</option>
                        <option>20:00</option>
                        <option>21:00</option>
                        <option>22:00</option>
                    </select> <br>
                <label style for="contactNum">Your Contact number:</label><br>
                    <input class="contact-form" type="tel" id="contactNum" name="contactNum" required><br>
                <label style for="email" >Enter your email:</label><br>
                    <input class="contact-form" type="email" id="email" name="email" required><br>
                <label for="additionalInfo">If you have additional information for our staff, please enter it below:</label><br>
                    <textarea required class="reserv-message" id="additionalInfo" > </textarea> <br><br>
                <input class="reserv-button" style="padding: 2vw 8vw; " type="submit" value="Submit">
            </form>
        </div>

<%= document.getElementById("date").min = new Date().toISOString().split("T")[0]; %>

<%-include("footer") -%>


